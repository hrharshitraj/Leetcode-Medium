class Solution {
    public int maxProfit(int[] prices) {
        int n = prices.length;
        int minPrice = prices[0];
        int profit = 0;
        int sum = 0;

        for(int i=1; i<n; i++) {
            if((prices[i]<=minPrice) || (prices[i]<prices[i-1])) {
                sum += profit;
                profit = 0;
                minPrice = prices[i];
            }
            else if(prices[i]>minPrice) {
                profit = Math.max(profit,(prices[i]-minPrice));
            }
        }
        sum += profit;
        return sum;
    }
}

